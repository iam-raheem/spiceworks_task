!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %title Onlineforum
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_pack_tag 'application'
    :css
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
  %body
    %nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      = link_to 'Online Forum', root_url, class: 'navbar-brand'
      %button.navbar-toggler{"aria-controls" => "navbarCollapse", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarCollapse", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon
      #navbarCollapse.collapse.navbar-collapse
        %ul.navbar-nav.mr-auto
          - if current_user
            %li.nav-item
              = link_to 'Edit Profile', edit_user_registration_path, class: 'nav-link'
            %li.nav-item
              = link_to 'Questions', questions_path, class: 'nav-link'
            %li.nav-item.active
              = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link'
              %span.sr-only (current)
    
    .container
      .row
        .col-sm-10{:style => "margin-top: 7%"}
          = render 'layouts/alerts'
          = yield
